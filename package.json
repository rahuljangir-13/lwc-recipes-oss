{
    "name": "lwc-recipes-oss",
    "version": "1.0.0",
    "author": "Salesforce Developer Evangelism",
    "bugs": "https://github.com/trailheadapps/lwc-recipes-oss/issues",
    "dependencies": {
        "@capacitor-community/http": "^1.4.1",
        "@capacitor/camera": "^7.0.1",
        "@capacitor/cli": "^6.2.1",
        "@capacitor/core": "^7.4.0",
        "@capacitor/filesystem": "^7.1.1",
        "@fastify/static": "^8.1.1",
        "body-parser": "^2.2.0",
        "buffer": "^6.0.3",
        "chart.js": "^4.4.9",
        "cors": "^2.8.5",
        "d3": "^7.9.0",
        "express": "^5.1.0",
        "fastify": "^5.2.2",
        "jsforce": "^3.8.2",
        "lightning-base-components": "^1.27.2-alpha",
        "lwc": "^8.12.7",
        "lwc-recipes-oss-ui-components": "^0.3.2",
        "lwr": "^0.16.11",
        "wired-elements": "^3.0.0-rc.6",
        "workbox-cacheable-response": "^7.3.0",
        "workbox-expiration": "^7.3.0",
        "workbox-precaching": "^7.3.0",
        "workbox-routing": "^7.3.0",
        "workbox-strategies": "^7.3.0",
        "workbox-sw": "^7.3.0",
        "workbox-webpack-plugin": "^7.3.0",
        "workbox-window": "^7.3.0"
    },
    "description": "Lightning Web Components Recipes Open Source",
    "devDependencies": {
        "@lwc/eslint-plugin-lwc": "^2.1.0",
        "@lwc/jest-preset": "^18.1.2",
        "@sa11y/jest": "7.0.0",
        "@salesforce/eslint-config-lwc": "^3.7.1",
        "@salesforce/eslint-plugin-lightning": "^1.0.1",
        "@salesforce/wire-service-jest-util": "^4.1.5",
        "browserify": "^17.0.0",
        "concurrently": "^9.1.2",
        "eslint": "^8.57.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "^28.11.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-canvas-mock": "^2.5.2",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.5.0",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1",
        "webpack-node-externals": "^3.0.0",
        "workbox-cli": "^7.3.0"
    },
    "homepage": "https://github.com/trailheadapps/lwc-recipes-oss",
    "keywords": [
        "lwc"
    ],
    "license": "CC0-1.0",
    "repository": "trailheadapps/lwc-recipes-oss",
    "scripts": {
        "build": "lwr build && npm run inject-sw",
        "inject-sw": "workbox injectManifest workbox-config.js",
        "clean": "rimraf __lwr_cache__ && rimraf site",
        "dev": "lwr dev",
        "lint": "eslint **/src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,mjs,json,md,yaml,yml}\"",
        "prettier:verify": "prettier --check \"**/*.{css,html,js,mjs,json,md,yaml,yml}\"",
        "prepare": "husky || true",
        "precommit": "lint-staged",
        "start": "node scripts/start-server.mjs",
        "test": "npm run test:unit",
        "test:unit": "jest",
        "test:unit:watch": "jest --watch",
        "test:unit:coverage": "jest --coverage",
        "test:unit:debug": "jest --debug",
        "proxy-server": "node scripts/proxy-server.js",
        "dev-with-proxy": "concurrently \"npm run proxy-server\" \"npm run dev\""
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "lint-staged": {
        "**/*.{cmp,component,css,html,js,mjs,json,md,page,yaml,yml}": [
            "prettier --write"
        ],
        "**/src/**/*.js": [
            "eslint"
        ],
        "**/src/**/*.{js,html,css}": [
            "jest --bail --findRelatedTests --passWithNoTests --forceExit"
        ]
    },
    "volta": {
        "node": "20.18.2"
    }
}
